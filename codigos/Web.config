		<add key="JwtSecret" value="57c065a2776c47089bf549d86f2d96303a269d9c6e2c420189cc6dae59b4f614" />
		<add key="JwtIssuer" value="PuntoVentas" />
		<add key="JwtAudience" value="PuntoVentasClients" />
		<add key="JwtExpiryMinutes" value="20" />
	</appSettings>

	<connectionStrings>
		<!-- Tu cadena original -->
		<add name="POS_DB" connectionString="Data Source=.;Initial Catalog=POS_DB;Integrated Security=True;" providerName="System.Data.SqlClient" />
		<!-- Alias para el código que usa 'DefaultConnection' -->
		<add name="DefaultConnection" connectionString="Data Source=.;Initial Catalog=POS_DB;Integrated Security=True;" providerName="System.Data.SqlClient" />
	</connectionStrings>

	<system.web>
		<compilation debug="true" targetFramework="4.8" />
		<httpRuntime targetFramework="4.8" />
		<sessionState timeout="20" />

		<!-- Forms Authentication -->
		<authentication mode="Forms">
			<forms loginUrl="~/Pages/Login.aspx" timeout="30" slidingExpiration="true" protection="All" requireSSL="false" />
		</authentication>

		<!-- Cookies seguras -->
		<httpCookies httpOnlyCookies="true" requireSSL="false" />

		<!-- ⬇️⬇️ REGLA GLOBAL: negar anónimos en todo el sitio ⬇️⬇️ -->
		<authorization>
			<deny users="?" />
		</authorization>
		<!-- ⬆️⬆️ -->
	</system.web>

	<!-- ⬇️⬇️ EXCEPCIONES: permitir anónimo en Login y (opcional) en estáticos ⬇️⬇️ -->
	<location path="Pages/Login.aspx">
		<system.web>
			<authorization>
				<allow users="*" />
			</authorization>
		</system.web>
	</location>

	<!-- Opcional: si tu Login usa CSS/JS de estas carpetas públicas, déjalas abiertas -->
	<location path="Styles">
		<system.web>
			<authorization>
				<allow users="*" />
			</authorization>
		</system.web>
	</location>
	<location path="Scripts">
		<system.web>
			<authorization>
				<allow users="*" />
			</authorization>
		</system.web>
	</location>
	<!-- ⬆️⬆️ -->

	<system.webServer>
		<validation validateIntegratedModeConfiguration="false" />
		<httpProtocol>
			<customHeaders>
				<add name="X-Content-Type-Options" value="nosniff" />
				<add name="X-Frame-Options" value="DENY" />
				<add name="X-XSS-Protection" value="1; mode=block" />
				<add name="Referrer-Policy" value="no-referrer" />
			</customHeaders>
		</httpProtocol>
	</system.webServer>

	<system.codedom>
